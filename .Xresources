xterm.vt100.allowBoldFonts: false
xterm.vt100.background: #000000
xterm.vt100.colorMode: false
xterm.vt100.faceName: spleen:size=10:antialias=false
xterm.vt100.foreground: #ffffff
xterm.vt100.fullScreen: true
xterm.vt100.internalBorder: 32
xterm.vt100.locale: false
xterm.vt100.saveLines: 0
xterm.vt100.scaleHeight: 1.2
xterm.vt100.scrollBar: false
xterm.vt100.translations: #override \n\
  Ctrl <Key>M: fullscreen(toggle) \n\
  Ctrl <Key>P: insert-selection(PRIMARY) \n\
  Ctrl <Key>Q: quit() \n\
  Ctrl <Key>R: redraw() \n\
  Ctrl <Key>T: set-reverse-video(toggle)
xterm.vt100.utf8: true
